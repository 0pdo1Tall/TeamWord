<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C1CDCD"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/word_list_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#757575"
            android:scaleType="centerCrop"
            android:src="@drawable/food_1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/word_list_item_name"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/word_list_item_image"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/word_item_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="Sport" />

    <TextView
        android:id="@+id/word_list_item_date"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/word_list_item_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/word_list_item_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        tools:text="2/2/2022" />

    <TextView
        android:id="@+id/word_list_item_owner"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word_list_item_name"
        android:layout_alignLeft="@+id/word_list_item_name"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_dark"
        tools:text="Owner: TienHoang" />


</RelativeLayout>
